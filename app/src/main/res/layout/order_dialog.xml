<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="#cc3300">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F2C0">


    <TextView
        android:id="@+id/dialogTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#cc3300"
        android:textStyle="italic|bold"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="Order Confirmation"/>
    <TextView
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#cc3300"/>
    <TextView
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:id="@+id/dialogTotalPriceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#cc3300"
        android:textStyle="italic|bold"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:layout_margin="5dp"
            android:text="Please enter \nyour name below"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#cc3300"
            android:textStyle="italic|bold"/>
        <TextView
            android:layout_margin="5dp"
            android:text="Table number"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#cc3300"
            android:textStyle="italic|bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:id="@+id/dialogCustomerNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                />
            <Spinner
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="#fff"
                android:id="@+id/dialogSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
        </LinearLayout>



<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:id="@+id/dialogReturnBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:id="@+id/dialogSendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:background="@drawable/btn_green"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>
</LinearLayout>
</LinearLayout>